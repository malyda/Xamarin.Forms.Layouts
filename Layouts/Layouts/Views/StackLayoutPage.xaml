<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.Views.StackLayoutPage">
  
    <StackLayout Padding="0,20,0,0" Spacing="30" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Teal">
      <Label Text="Now you are looking at StackLayout" HorizontalOptions="Center"/>
      <BoxView Color="Aqua" HorizontalOptions="FillAndExpand"/>
      <Label Text="Spacing = 30" HorizontalOptions="Center" />
      <ActivityIndicator IsRunning="True" ></ActivityIndicator>
      <BoxView Color="Red" HorizontalOptions="FillAndExpand"/>
      <Label Text="Items are below each other." HorizontalOptions="CenterAndExpand"/>
  </StackLayout>

</ContentPage>